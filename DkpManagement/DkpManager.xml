<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Button name="RaidDkpButton" virtual="true">
        <Size>
            <AbsDimension x="52" y="45"/>
        </Size>
        <Scripts>
            <OnClick>
                    _G.DkpManager:raidDkpButtonOnClick(self:GetID())
            </OnClick>
        </Scripts>
    </Button>
    <Button name="AdjustDkp" virtual="true">
        <Size>
            <AbsDimension x="53" y="48"/>
        </Size>
        <ButtonText>
            <Anchors>
                <Anchor point="CENTER"/>
            </Anchors>
        </ButtonText>
        <NormalFont style="GameFontHighlightLarge"/>
        <HighlightFont style="GameFontNormalLarge"/>
        <Scripts>
            <OnClick>
                    _G.DkpManager:adjustDkpOnClick(self:GetID())
                    _G.DkpManager:resetPlayerEditBox()
            </OnClick>
            <OnLoad>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(1, 1, 1, 0)
            </OnLoad>
            <OnEnter>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(1, 1, 1, 0.2)
            </OnEnter>
            <OnLeave>
                    self:GetScript("OnLoad")(self)
            </OnLeave>
        </Scripts>
        <NormalTexture name="$parentBackground">
            <Color r="1" g="1" b="1" a="0.5"/>
        </NormalTexture>
    </Button>
    <Frame name="Management" parent="OuterFrame">
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="OuterFrameList" relativePoint="TOPRIGHT">
                <Offset>
                    <AbsDimension x="0" y="-4"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Size>
            <AbsDimension x="283" y="276"/>
        </Size>
        <Scripts>
            <OnLoad>
                _G.DkpManager:createManagementButtons()
            </OnLoad>
        </Scripts>
        <Frames>
            <Frame name="$parentTitleFrame">
                <Size>
                    <AbsDimension x="283" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                </Anchors>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
                    <Color r="0" g="0" b="0" a="1"/>
                </Backdrop>
                <Frames>
                    <Button name="$parentSnapshot" text="SNAPSHOT" inherits="AllClassToggle">
                        <Size>
                            <AbsDimension x="135" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPRIGHT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    _G.DkpManager:createDkpSnapshot()
                            </OnClick>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>
            <Frame name="$parentPlayerManagement" hidden="true">
                <Size>
                    <AbsDimension x="283" y="48"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT">
                        <Offset>
                            <AbsDimension x="0" y="6"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
                    <Color r="0" g="0" b="0" a="1"/>
                </Backdrop>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentPlayerName" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="BOTTOM" relativePoint="TOP"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentSub" text="SUB_BUTTON" inherits="AdjustDkp" id="2">
                        <Anchors>
                            <Anchor point="RIGHT">
                                <Offset>
                                    <AbsDimension x="0" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <ButtonText>
                            <Anchors>
                                <Anchor point="CENTER">
                                    <Offset>
                                        <AbsDimension x="0" y="0.8"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </ButtonText>
                    </Button>
                    <Button name="$parentAdd" text="ADD_BUTTON" inherits="AdjustDkp" id="1">
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentSub" relativePoint="LEFT"/>
                        </Anchors>
                        <ButtonText>
                            <Anchors>
                                <Anchor point="CENTER">
                                    <Offset>
                                        <AbsDimension x="0" y="-0.5"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </ButtonText>
                    </Button>
                    <Frame name="$parentDescription">
                        <Size>
                            <AbsDimension x="88" y="24"/>
                        </Size>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString inherits="GameFontHighlight" text="PLAYER_MAN_DESCRIPTION">
                                    <Color r="1" g="1" b="1" a="0.9"/>
                                    <Anchors>
                                        <Anchor point="LEFT">
                                            <Offset>
                                                <AbsDimension x="6" y="0"/>
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="TOPLEFT"/>
                        </Anchors>
                    </Frame>
                    <Button name="$parentQueue" text="QUEUE_BUTTON">
                        <Anchors>
                            <Anchor point="TOP" relativeTo="$parentDescription" relativePoint="BOTTOM">
                                <Offset>
                                    <AbsDimension x="7" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Size>
                            <AbsDimension x="100" y="24"/>
                        </Size>
                        <ButtonText name="$parentText">
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="4" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </ButtonText>
                        <NormalFont style="GameFontHighlight"/>
                        <Scripts>
                            <OnClick>
                                    _G.Bench:benchPlayer()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <EditBox name="$parentValue" numeric="true" font="GameFontHighlight" autoFocus="false">
                        <Size>
                            <AbsDimension x="64" y="48"/>
                        </Size>
                        <Anchors>
                            <Anchor point="CENTER">
                                <Offset>
                                    <AbsDimension y="13" x="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <TextInsets>
                            <AbsInset left="5" right="0" top="0" bottom="0"/>
                        </TextInsets>
                        <FontString>
                            <Color r="1" g="1" b="1" a="0.9"/>
                        </FontString>
                        <Scripts>
                            <OnEscapePressed>
                                self:ClearFocus()
                            </OnEscapePressed>
                        </Scripts>
                    </EditBox>
                </Frames>
            </Frame>
            <Button name="$parentUndo" text="UNDO" inherits="HoverLight">
                <Size>
                    <AbsDimension x="135" y="45"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMLEFT"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                            _G.DkpManager:undo()
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentDecay" text="DECAY" inherits="HoverLight">
                <Size>
                    <AbsDimension x="74" y="45"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentUndo" relativePoint="RIGHT"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                            _G.DkpManager:addDecayEvent()
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentLog" text="LOG" inherits="HoverLight">
                <Size>
                    <AbsDimension x="74" y="45"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentDecay" relativePoint="RIGHT"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        _G.DkpManager:onLogClick()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>