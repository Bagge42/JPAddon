<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Button name="BenchEntry" hidden="true" virtual="true">
        <Size>
            <AbsDimension x="85" y="24"/>
        </Size>
        <Layers>
            <Layer>
                <FontString name="$parentPlayer" justifyH="LEFT" inherits="GameFontHighlightSmall">
                    <Size>
                        <AbsDimension x="85" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset>
                                <AbsDimension x="4" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                    getglobal(self:GetName() .. BACKGROUND):Hide()
            </OnLoad>
            <OnClick>
                    _G.Bench:removeFromBench(self:GetID())
            </OnClick>
            <OnEnter>
                    getglobal(self:GetName() .. BACKGROUND):Show()
            </OnEnter>
            <OnLeave>
                    getglobal(self:GetName() .. BACKGROUND):Hide()
            </OnLeave>
        </Scripts>
        <NormalTexture name="$parentBackground">
            <Color r="0" g="0" b="0.5" a="0.33"/>
        </NormalTexture>
    </Button>
    <Frame name="Bench" parent="OuterFrame">
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="Management" relativePoint="TOPRIGHT">
                <Offset>
                    <AbsDimension x="0" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Size>
            <AbsDimension x="85" y="276"/>
        </Size>
        <Frames>
            <Frame name="$parentTitleFrame">
                <Size>
                    <AbsDimension x="85" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                </Anchors>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
                    <Color r="0" g="0" b="0" a="1"/>
                </Backdrop>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="GameFontHighlight" text="BENCH_TITLE">
                            <Anchors>
                                <Anchor point="CENTER">
                                    <Offset>
                                        <AbsDimension x="0" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            <Frame name="$parentList">
                <Scripts>
                    <OnLoad>
                            _G.Bench:createBenchEntries()
                            self:RegisterEvent("ADDON_LOADED")
                    </OnLoad>
                    <OnEvent>
                        _G.Bench:loadBench(event, ...)
                    </OnEvent>
                </Scripts>
                <Size>
                    <AbsDimension x="85" y="207"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-24"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Frame>
            <Button name="$parentClearBench" inherits="HoverLight" text="CLEAR_BENCH">
                <Size>
                    <AbsDimension x="85" y="45"/>
                </Size>
                <Anchors>
                    <Anchor point="TOP" relativeTo="$parentList" relativePoint="BOTTOM"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        _G.Bench:clearBench()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>