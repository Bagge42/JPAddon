<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Button name="ListHeader" virtual="true">
        <Scripts>
            <OnLoad>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(0, 0, 0, 1)
            </OnLoad>
            <OnClick>
                    updateBrowserEntries(self:GetID())
            </OnClick>
            <OnEnter>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(1, 1, 1, 0.4)
            </OnEnter>
            <OnLeave>
                    self:GetScript("OnLoad")(self)
            </OnLeave>
        </Scripts>
        <ButtonText>
            <Anchors>
                <Anchor point="LEFT">
                    <Offset>
                        <AbsDimension x="4" y="0"/>
                    </Offset>
                </Anchor>
            </Anchors>
        </ButtonText>
        <NormalFont style="GameFontHighlight"/>
        <HighlightFont style="GameFontNormal"/>
        <NormalTexture name="$parentBackground">
            <Color r="0" g="0" b="0" a="0.6"/>
        </NormalTexture>
    </Button>
    <Button name="ListEntry" hidden="true" virtual="true">
        <Size>
            <AbsDimension x="267" y="24"/>
        </Size>
        <Layers>
            <Layer>
                <FontString name="$parentPlayer" justifyH="LEFT" inherits="GameFontHighlightSmall">
                    <Size>
                        <AbsDimension x="184" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset>
                                <AbsDimension x="4" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentAmount" justifyH="LEFT" inherits="GameFontHighlightSmall">
                    <Size>
                        <AbsDimension x="83" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentPlayer">
                            <Offset>
                                <AbsDimension x="4" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                    getglobal(self:GetName() .. BACKGROUND):Hide()
            </OnLoad>
            <OnClick>
                    _G.BrowserSelection:selectEntry(self:GetID())
            </OnClick>
            <OnEnter>
                    getglobal(self:GetName() .. BACKGROUND):Show()
            </OnEnter>
            <OnLeave>
                    if not _G.BrowserSelection:isSelected(self:GetID()) then
                        getglobal(self:GetName() .. BACKGROUND):Hide()
                    end
            </OnLeave>
        </Scripts>
        <NormalTexture name="$parentBackground">
            <Color r="0" g="0" b="0.5" a="0.33"/>
        </NormalTexture>
    </Button>
    <Button name="ClassButton" virtual="true">
        <Size>
            <AbsDimension x="32" y="32"/>
        </Size>
        <Scripts>
            <OnClick>
                    _G.DkpBrowser:classButtonOnClick(self:GetID())
            </OnClick>
        </Scripts>
    </Button>
    <Button name="AllClassToggle" virtual="true">
        <ButtonText>
            <Anchors>
                <Anchor point="CENTER"/>
            </Anchors>
        </ButtonText>
        <NormalFont style="GameFontHighlight"/>
        <HighlightFont style="GameFontNormal"/>
        <Scripts>
            <OnLoad>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(1, 1, 1, 0)
            </OnLoad>
            <OnEnter>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(1, 1, 1, 0.2)
            </OnEnter>
            <OnLeave>
                    self:GetScript("OnLoad")(self)
            </OnLeave>
        </Scripts>
        <NormalTexture name="$parentBackground">
            <Color r="1" g="1" b="1" a="0.5"/>
        </NormalTexture>
    </Button>
    <Frame name="OuterFrame" parent="UIParent" movable="true" enableMouse="true" clampedToScreen="true" hidden="true">
        <Anchors>
            <Anchor point="RIGHT" relativePoint="CENTER">
                <Offset>
                    <AbsDimension x="200" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Size>
            <AbsDimension x="651" y="300"/>
        </Size>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" tile="true">
            <Color r="0" g="0" b="0" a="0.3"/>
        </Backdrop>
        <Scripts>
            <OnLoad>
                    _G.DkpBrowser:relayCommands()
                    _G.DkpBrowser:createEntries()
                    _G.DkpBrowser:createFilterButtons()
                    self:RegisterEvent("GUILD_ROSTER_UPDATE")
                    self:SetUserPlaced(1)
                    self:RegisterForDrag("LeftButton")
            </OnLoad>
            <OnEvent>
                    _G.DkpBrowser:updateRoster()
            </OnEvent>
            <OnDragStart>
                    self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                    self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
        <Frames>
            <Frame name="$parentList">
                <Size>
                    <AbsDimension x="283" y="225"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-20"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnMouseWheel>
                            ScrollFrameTemplate_OnMouseWheel(OuterFrameListScrollFrame, delta)
                    </OnMouseWheel>
                </Scripts>
                <Frames>
                    <ScrollFrame name="$parentScrollFrame" inherits="FauxScrollFrameTemplate">
                        <Size>
                            <AbsDimension x="16" y="192"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="-23" y="-28"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnVerticalScroll>
                                FauxScrollFrame_OnVerticalScroll(self, offset, 24, updateBrowserEntries)
                            </OnVerticalScroll>
                        </Scripts>
                    </ScrollFrame>
                    <Button inherits="ListHeader" name="$parentPlayerHeader" id="1" text="PLAYER_HEADER">
                        <Size>
                            <AbsDimension x="188" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-4"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                    </Button>
                    <Button inherits="ListHeader" name="$parentAmountHeader" id="2" text="AMOUNT_HEADER">
                        <Size>
                            <AbsDimension x="95" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentPlayerHeader"/>
                        </Anchors>
                    </Button>
                </Frames>
            </Frame>
            <Frame name="TitleFrame">
                <Size>
                    <AbsDimension x="651" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                </Anchors>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
                    <Color r="0" g="0" b="0" a="1"/>
                </Backdrop>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="GameFontHighlight" text="TITLE">
                            <Anchors>
                                <Anchor point="RIGHT" relativeTo="TitleFrame" relativePoint="LEFT">
                                    <Offset>
                                        <AbsDimension x="56" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentClose" text="CLOSE_BUTTON">
                        <Size>
                            <AbsDimension x="20" y="20"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT">
                                <Offset>
                                    <AbsDimension x="0" y="5"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <ButtonText>
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="7" y="-2"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </ButtonText>
                        <NormalFont style="GameFontHighlight"/>
                        <Scripts>
                            <OnClick>
                                    self:GetParent():GetParent():Hide()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentNone" text="NONE" inherits="AllClassToggle">
                        <Size>
                            <AbsDimension x="40" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="OuterFrameList" relativePoint="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="0" y="8"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                _G.DkpBrowser:deselectAllClasses()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentAll" text="ALL" inherits="AllClassToggle">
                        <Size>
                            <AbsDimension x="40" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentNone" relativePoint="LEFT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    _G.DkpBrowser:selectAllClasses()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Frame name="$parentToggles">
                        <Size>
                            <AbsDimension x="40" y="24"/>
                        </Size>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString inherits="GameFontHighlight" text="TOGGLES">
                                    <Anchors>
                                        <Anchor point="CENTER"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentAll" relativePoint="LEFT"/>
                        </Anchors>
                    </Frame>
                </Frames>
            </Frame>
            <Frame name="$parentFilter">
                <Size>
                    <AbsDimension x="253" y="32"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="$parentList">
                        <Offset>
                            <AbsDimension x="-1" y="-46"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>
</Ui>