<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Button name="JP_ListHeader" virtual="true">
        <Scripts>
            <OnLoad>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(0, 0, 0, 1)
            </OnLoad>
            <OnClick>
                    JP_UpdateBrowserEntries(self:GetID())
            </OnClick>
            <OnEnter>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(1, 1, 1, 0.4)
            </OnEnter>
            <OnLeave>
                    self:GetScript("OnLoad")(self)
            </OnLeave>
        </Scripts>
        <ButtonText>
            <Anchors>
                <Anchor point="LEFT">
                    <Offset>
                        <AbsDimension x="4" y="0"/>
                    </Offset>
                </Anchor>
            </Anchors>
        </ButtonText>
        <NormalFont style="GameFontHighlight"/>
        <HighlightFont style="GameFontNormal"/>
        <NormalTexture name="$parentBackground">
            <Color r="0" g="0" b="0" a="0.6"/>
        </NormalTexture>
    </Button>
    <Button name="JP_ListEntry" hidden="true" virtual="true">
        <Size>
            <AbsDimension x="267" y="24"/>
        </Size>
        <Layers>
            <Layer>
                <FontString name="$parentPlayer" justifyH="LEFT" inherits="GameFontHighlightSmall">
                    <Size>
                        <AbsDimension x="184" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset>
                                <AbsDimension x="4" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentBid" justifyH="LEFT" inherits="GameFontHighlightSmall" hidden="true">
                    <Size>
                        <AbsDimension x="73" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentPlayer">
                            <Offset>
                                <AbsDimension x="4" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentAmount" justifyH="LEFT" inherits="GameFontHighlightSmall">
                    <Size>
                        <AbsDimension x="83" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentPlayer">
                            <Offset>
                                <AbsDimension x="4" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                    getglobal(self:GetName() .. BACKGROUND):Hide()
            </OnLoad>
            <OnClick>
                    Jp.BrowserSelection:selectEntry(self:GetID())
            </OnClick>
            <OnEnter>
                    getglobal(self:GetName() .. BACKGROUND):Show()
            </OnEnter>
            <OnLeave>
                    if not Jp.BrowserSelection:isSelected(self:GetID()) then
                        getglobal(self:GetName() .. BACKGROUND):Hide()
                    end
            </OnLeave>
        </Scripts>
        <NormalTexture name="$parentBackground">
            <Color r="0" g="0" b="0.5" a="0.33"/>
        </NormalTexture>
    </Button>
    <Button name="JP_ClassButton" virtual="true">
        <Size>
            <AbsDimension x="32" y="32"/>
        </Size>
        <Scripts>
            <OnClick>
                    Jp.DkpBrowser:classButtonOnClick(self:GetID())
            </OnClick>
        </Scripts>
    </Button>
    <Button name="JP_CloseButton" text="CLOSE_BUTTON" virtual="true">
        <Size>
            <AbsDimension x="24" y="24"/>
        </Size>
        <Anchors>
            <Anchor point="RIGHT"/>
        </Anchors>
        <ButtonText>
            <Anchors>
                <Anchor point="CENTER">
                    <Offset>
                        <AbsDimension x="2" y="1"/>
                    </Offset>
                </Anchor>
            </Anchors>
        </ButtonText>
        <NormalFont style="GameFontHighlight"/>
        <Scripts>
            <OnClick>
                    self:GetParent():GetParent():Hide()
            </OnClick>
        </Scripts>
    </Button>
    <Button name="JP_AllClassToggle" virtual="true">
        <ButtonText>
            <Anchors>
                <Anchor point="CENTER"/>
            </Anchors>
        </ButtonText>
        <NormalFont style="GameFontHighlight"/>
        <HighlightFont style="GameFontNormal"/>
        <Scripts>
            <OnLoad>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(1, 1, 1, 0)
            </OnLoad>
            <OnEnter>
                    getglobal(self:GetName() .. BACKGROUND):SetVertexColor(1, 1, 1, 0.2)
            </OnEnter>
            <OnLeave>
                    self:GetScript("OnLoad")(self)
            </OnLeave>
        </Scripts>
        <NormalTexture name="$parentBackground">
            <Color r="1" g="1" b="1" a="0.5"/>
        </NormalTexture>
    </Button>
    <Frame name="JP_NewWindow" parent="UIParent" movable="true" enableMouse="true" clampedToScreen="true"
           hidden="true" virtual="true">
        <Anchors>
            <Anchor point="RIGHT" relativePoint="CENTER">
                <Offset>
                    <AbsDimension x="350" y="100"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Size>
            <AbsDimension x="445" y="500"/>
        </Size>
        <Scripts>
            <OnDragStart>
                    self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                    self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" tile="true">
            <Color r="0" g="0" b="0" a="0.3"/>
        </Backdrop>
        <Frames>
            <Frame name="$parentTitleFrame">
                <Size>
                    <AbsDimension x="445" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                </Anchors>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
                    <Color r="0" g="0" b="0" a="1"/>
                </Backdrop>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentName" inherits="GameFontHighlight" text="NEW_TITLE">
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="6" y="1"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentClose" inherits="JP_CloseButton"/>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
    <Frame name="JP_OuterFrame" parent="UIParent" movable="true" enableMouse="true" clampedToScreen="true"
           hidden="true">
        <Anchors>
            <Anchor point="RIGHT" relativePoint="CENTER">
                <Offset>
                    <AbsDimension x="200" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Size>
            <AbsDimension x="651" y="300"/>
        </Size>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" tile="true">
            <Color r="0" g="0" b="0" a="0.3"/>
        </Backdrop>
        <Scripts>
            <OnLoad>
                    Jp.DkpBrowser:relayCommands()
                    Jp.DkpBrowser:createEntries()
                    Jp.DkpBrowser:createFilterButtons()
                    self:RegisterEvent("GUILD_ROSTER_UPDATE")
                    self:RegisterEvent("CHAT_MSG_RAID")
                    self:RegisterEvent("CHAT_MSG_RAID_LEADER")
                    self:RegisterEvent("CHAT_MSG_RAID_WARNING")
                    self:RegisterEvent("CHAT_MSG_WHISPER")
                    self:RegisterEvent("ADDON_LOADED")
                    self:SetUserPlaced(1)
                    self:RegisterForDrag("LeftButton")
            </OnLoad>
            <OnEvent>
                    Jp.DkpBrowser:onEvent(event, ...)
            </OnEvent>
            <OnDragStart>
                    self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                    self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
        <Frames>
            <Frame name="$parentList">
                <Size>
                    <AbsDimension x="283" y="225"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="0" y="-20"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnMouseWheel>
                            ScrollFrameTemplate_OnMouseWheel(JP_OuterFrameListScrollFrame, delta)
                    </OnMouseWheel>
                </Scripts>
                <Frames>
                    <ScrollFrame name="$parentScrollFrame" inherits="FauxScrollFrameTemplate">
                        <Size>
                            <AbsDimension x="16" y="192"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="-23" y="-28"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnVerticalScroll>
                                FauxScrollFrame_OnVerticalScroll(self, offset, 24, JP_UpdateBrowserEntries)
                            </OnVerticalScroll>
                        </Scripts>
                    </ScrollFrame>
                    <Button inherits="JP_ListHeader" name="$parentPlayerHeader" id="1" text="PLAYER_HEADER">
                        <Size>
                            <AbsDimension x="189" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="0" y="-4"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                    </Button>
                    <Button inherits="JP_ListHeader" name="$parentBidHeader" id="3" text="BID_HEADER" hidden="true">
                        <Size>
                            <AbsDimension x="74" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentPlayerHeader"/>
                        </Anchors>
                    </Button>
                    <Button inherits="JP_ListHeader" name="$parentAmountHeader" id="2" text="AMOUNT_HEADER">
                        <Size>
                            <AbsDimension x="94" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentPlayerHeader"/>
                        </Anchors>
                    </Button>
                </Frames>
            </Frame>
            <Frame name="$parentTitleFrame">
                <Size>
                    <AbsDimension x="651" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                </Anchors>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
                    <Color r="0" g="0" b="0" a="1"/>
                </Backdrop>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString inherits="GameFontHighlight" text="TITLE">
                            <Anchors>
                                <Anchor point="RIGHT" relativeTo="JP_OuterFrameTitleFrame" relativePoint="LEFT">
                                    <Offset>
                                        <AbsDimension x="56" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentClose" inherits="JP_CloseButton"/>
                    <Button name="$parentOptions" text="SETTINGS_BUTTON_TEXT" inherits="JP_AllClassToggle">
                        <Size>
                            <AbsDimension x="58" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentClose" relativePoint="LEFT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    Jp.FrameHandler:settingButtonClicked()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentLog" text="LOG_BUTTON_TEXT" inherits="JP_AllClassToggle">
                        <Size>
                            <AbsDimension x="48" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentOptions" relativePoint="LEFT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    Jp.Log:onClick()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentPriorities" text="PRIORITY_BUTTON_TEXT" inherits="JP_AllClassToggle">
                        <Size>
                            <AbsDimension x="65" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentLog" relativePoint="LEFT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    Jp.Priorities:onClick()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentInvite" text="INVITE_BUTTON_TEXT" inherits="JP_AllClassToggle">
                        <Size>
                            <AbsDimension x="58" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentPriorities" relativePoint="LEFT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    Jp.FrameHandler:inviteButtonClicked()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentTracking" text="CONS_BUTTON_TEXT" inherits="JP_AllClassToggle">
                        <Size>
                            <AbsDimension x="75" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentInvite" relativePoint="LEFT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    Jp.FrameHandler:consButtonClicked()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentNone" text="NONE" inherits="JP_AllClassToggle">
                        <Size>
                            <AbsDimension x="48" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="JP_OuterFrameList" relativePoint="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="0" y="8"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    Jp.DkpBrowser:clearOverview()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Button name="$parentAll" text="ALL" inherits="JP_AllClassToggle">
                        <Size>
                            <AbsDimension x="40" y="24"/>
                        </Size>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentNone" relativePoint="LEFT"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                    Jp.DkpBrowser:selectAllClasses()
                            </OnClick>
                        </Scripts>
                    </Button>
                    <Frame name="$parentToggles">
                        <Size>
                            <AbsDimension x="40" y="24"/>
                        </Size>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString inherits="GameFontHighlight" text="TOGGLES">
                                    <Anchors>
                                        <Anchor point="CENTER"/>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Anchors>
                            <Anchor point="RIGHT" relativeTo="$parentAll" relativePoint="LEFT"/>
                        </Anchors>
                    </Frame>
                </Frames>
            </Frame>
            <Frame name="$parentFilter">
                <Size>
                    <AbsDimension x="253" y="32"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="$parentList">
                        <Offset>
                            <AbsDimension x="-1" y="-46"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>
</Ui>